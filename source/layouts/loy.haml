%html.no-js{ :lang => "en" }
	<!--<![endif]-->
	%head
		%meta{ :charset => "utf-8" }/
		
		-# Always force latest IE rendering engine (even in intranet) & Chrome Frame
		-# Remove this if you use the .htaccess
		%meta{ "http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1" }/
		
		%title= if current_page.data.has_key? 'title' then current_page.data["title"] else "Mina Loy Online" end
		%meta( http-equiv="content-script-type" content="text/javascript" )/
		%meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }/
		<!--[if lt IE 9]><!-->
		= javascript_include_tag("//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7/html5shiv.min.js")
		<!--<![endif]-->
		= stylesheet_link_tag("http://fonts.googleapis.com/css?family=Arapey", :media => "all", :rel => "stylesheet" )
		= stylesheet_link_tag("loy.css", :media => "all", :rel => "stylesheet" )
		
	%body
		- if current_page.data.has_key? 'content_id' then id = current_page.data['content_id'] else id = nil end
		%article{ :id => id }
			- if id == "index" 
				= yield
			- else 
				%section#poem
					= yield